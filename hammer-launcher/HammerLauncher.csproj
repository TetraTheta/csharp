<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <ApplicationIcon>Resources\MainIcon.ico</ApplicationIcon>
    <ImportWindowsDesktopTargets>true</ImportWindowsDesktopTargets>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net10.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <!-- Code Style -->
    <DebugType>none</DebugType>
    <NoWarn>$(NoWarn);WFO5001;WPF0001</NoWarn>
    <Nullable>enable</Nullable>
    <!-- Assembly Information -->
    <AssemblyTitle>HammerLauncher</AssemblyTitle>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <Company>TetraTheta</Company>
    <Copyright>Copyright (c) TetraTheta All rights reserved</Copyright>
    <Description>Open Hammer Editor</Description>
    <FileVersion>$(AssemblyVersion)</FileVersion>
    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
    <IncludeSourceRevisionInInformationalVersion>false</IncludeSourceRevisionInInformationalVersion>
    <InformationalVersion>$(AssemblyVersion)</InformationalVersion>
    <Product>$(AssemblyTitle)</Product>
    <Title>$(AssemblyTitle)</Title>
    <!-- Publish -->
    <PublishSingleFile>true</PublishSingleFile>
    <!--
    <PublishTrimmed>true</PublishTrimmed>
    <SelfContained>true</SelfContained>
    <_SuppressWinFormsTrimError>true</_SuppressWinFormsTrimError>
    -->
    <SelfContained>false</SelfContained>
  </PropertyGroup>
  <ItemGroup>
    <Content Include="Resources\MainIcon.ico" />
    <Content Include="Resources\game_gmod_32.png" />
    <Content Include="Resources\game_gmod_gray_32.png" />
    <Content Include="Resources\game_hl2_32.png" />
    <Content Include="Resources\game_hl2_gray_32.png" />
    <Content Include="Resources\hammer_gmod_32.png" />
    <Content Include="Resources\hammer_hl2_32.png" />
    <Content Include="Resources\hammer_hpp_32.png" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="Forms\Launcher.Designer.cs">
      <DependentUpon>Launcher.cs</DependentUpon>
    </Compile>
  </ItemGroup>
</Project>
